[Unit]
Description=Card Wars Kingdom App - Main Instance (card-wars-kingdom.com)
After=network.target

[Service]
Type=notify
User=www-data
Group=www-data
WorkingDirectory=/var/www/cardwarskingdomrvd
Environment="PATH=/var/www/cardwarskingdomrvd/venv/bin"

ExecStart=/var/www/cardwarskingdomrvd/venv/bin/gunicorn \
    --bind 127.0.0.1:8000 \
    --workers 4 \
    --threads 2 \
    --worker-class gthread \
    --worker-tmp-dir /dev/shm \
    --timeout 120 \
    --graceful-timeout 30 \
    --keep-alive 5 \
    --max-requests 1000 \
    --max-requests-jitter 50 \
    --access-logfile /var/log/gunicorn/cardwars-app-access.log \
    --error-logfile /var/log/gunicorn/cardwars-app-error.log \
    --log-level info \
    --pid /var/run/gunicorn/cardwars-app.pid \
    --name cardwars-app-main \
    app:app

ExecReload=/bin/kill -s HUP $MAINPID
KillMode=mixed
TimeoutStopSec=30
PrivateTmp=true

# Security
NoNewPrivileges=true
PrivateDevices=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/log/gunicorn /var/run/gunicorn /var/www/cardwarskingdomrvd

# Restart policy
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
